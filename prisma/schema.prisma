generator client {
  provider = "prisma-client"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
}

model User {
  id        String      @id @default(uuid())
  login     String   @unique
  password  String
  createdAt DateTime @default(now())
  posts     Question[]
}

model Question {
  id        String      @id @default(uuid())
  text      String
  content   String?
  createdAt DateTime @default(now())

  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}
